<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        >
        
<RelativeLayout    android:layout_width="319dp"
    android:layout_height="462dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <EditText
        android:id="@+id/answer1EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question1TextView"
        android:layout_below="@+id/question1TextView"
        android:layout_marginTop="18dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/answer2EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question2TextView"
        android:layout_below="@+id/question2TextView"
        android:layout_marginTop="22dp"
        android:ems="10" />

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer3EditText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/answer3EditText"
        android:layout_below="@+id/answer3EditText"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="36dp"
        android:text="@string/squestions" />

    <TextView
        android:id="@+id/question1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/questionTextView"
        android:layout_below="@+id/questionTextView"
        android:layout_marginTop="21dp"
        android:text="" />

    <TextView
        android:id="@+id/question2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer1EditText"
        android:layout_below="@+id/answer1EditText"
        android:layout_marginTop="14dp"
        android:text="" />

    <TextView
        android:id="@+id/question3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer2EditText"
        android:layout_below="@+id/answer2EditText"
        android:layout_marginTop="16dp"
        android:text="" />

    <EditText
        android:id="@+id/answer3EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question3TextView"
        android:layout_below="@+id/question3TextView"
        android:layout_marginTop="22dp"
        android:ems="10" />

</RelativeLayout>
</ScrollView>