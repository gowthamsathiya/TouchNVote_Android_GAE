<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="384dp"
    android:layout_height="912dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/postQuestionTitleTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="63dp"
        android:text="@string/postQuestionTitle"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/quizListSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postQuestionTitleTextView"
        android:layout_alignRight="@+id/postQuestionTitleTextView"
        android:layout_below="@+id/postQuestionTitleTextView"
        android:layout_marginTop="70dp"
        android:gravity="center" />

    <Button
        android:id="@+id/postQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quizListSpinner"
        android:layout_below="@+id/quizListSpinner"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="97dp"
        android:text="@string/postquiz" />

</RelativeLayout>
